{
  "name": "bapt",
  "description": "Track your transit acurately, in a glance.",
  "manifest_version": 2,
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "train.png",
    "default_popup": "index.html"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": true
  },

  "permissions": [
    "https://myttc.ca",
    "tabs"
  ]
}